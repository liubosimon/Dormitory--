<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/mainbackgrond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ddd1" />
    <RelativeLayout
        android:id="@+id/maintop"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/pku_schoolbadge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="65dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/pku_schoolbadge"

            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/log_out"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ooo5555"
            android:layout_marginRight="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mainmiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maintop">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/mainmiddle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xuehao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="学号：1701210000"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="姓名：张三"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="性别：男"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="验证码：bbbbb"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xiaoqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="校区：大兴"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/nianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="年级：2017级"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yixuanlouhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="已选宿舍楼号：空"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/yixuansushehao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="宿舍号：空"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/background_dark"
                android:textSize="15dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/log_out"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:gravity="center_horizontal"
            android:text="查询"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/next1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/yyy666"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</RelativeLayout>